<% provide(:title, "登陆到UMARKET") %>
<h1>登陆到你的UMARKET账户</h1>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for(:session, url: login_path) do |f| %>

      <%= f.label :email, "邮箱/用户名" %>
      <%= f.email_field :email %>

      <%= f.label :password, "密码" %>
      <%= f.password_field :password %>

      <%= f.submit "Log in", class: "btn btn-primary" %>
    <% end %>

    <p>没有账号? <%= link_to "现在注册!", signup_path %></p>
    
  </div>
</div>